<!--支付-->
<!--收获地址-->
<view class="address_box">
    <view class="address">
        <view class="top">
            <text>收货人:{{address.userName}}</text>
            <text>{{address.telNumber}}</text>
        </view>
        <view class="bottom">
            {{address.provinceName}}{{address.cityName}}{{address.countyName}}{{address.detailInfo}}
        </view>
    </view>
</view>
<!--收获地址end-->
<!--购物车-->
<view class="car">
    <view class="title">购物车</view>
    <view class="shop" 
        wx:for="{{cart}}"
        wx:key="index"
    >
        <image mode="widthFix" src="{{item.goods_small_logo}}"></image>
        <view class="description">
            <view class="top">{{item.goods_name}}</view>
            <view class="bottom">
                <text>￥{{item.goods_price}}</text>
                <view class="btn">
                    <view>x{{item.num}}</view>
                </view>
            </view>
        </view>
    </view>
</view>
<!--工具栏-->
<view class="tools">
    <view class="right">
        <view class="price">
            <view>合计：</view>
            <view>
                <text>￥ {{price_all}}</text>
                <text>包含运费</text>
            </view>
        </view>
        <view class="count" bindtap="pay">支付<text wx:if="{{num_all}}">({{num_all}})</text></view>
    </view>
</view>
<!--工具栏end-->


