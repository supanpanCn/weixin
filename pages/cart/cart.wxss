.address_box .address_btn {
  padding: 30rpx;
}
.address_box .address_btn button {
  width: 60%;
  margin-left: 50%;
  transform: translateX(-50%);
}
.address_box .address {
  display: flex;
  flex-direction: column;
  padding: 10rpx 30rpx;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1rpx solid #555;
}
.address_box .address .top {
  flex: 1;
  display: flex;
  justify-content: space-between;
}
.address_box .address .bottom {
  flex: 1;
}
.car .title {
  color: var(--themeColor);
  font-size: 38rpx;
  font-weight: 600;
  padding: 5rpx 15rpx;
}
.car .shop {
  display: flex;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
}
.car .shop checkbox-group {
  flex: 1;
  display: flex;
  align-items: flex-end;
  padding-bottom: 45rpx;
  padding-left: 40rpx;
}
.car .shop checkbox-group checkbox .wx-checkbox-input {
  width: 45rpx;
  height: 45rpx;
}
.car .shop image {
  flex: 2;
  width: 80%;
}
.car .shop .description {
  flex: 4;
  display: flex;
  flex-direction: column;
}
.car .shop .description .top {
  flex: 2;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.car .shop .description .bottom {
  flex: 1;
  display: flex;
  justify-content: space-between;
}
.car .shop .description .bottom text {
  color: var(--themeColor);
  flex: 1;
  font-size: 34rpx;
}
.car .shop .description .bottom .btn {
  flex: 2;
}
.car .shop .description .bottom .btn view {
  width: 45rpx;
  height: 50rpx;
  float: right;
  margin-right: 15rpx;
  line-height: 50rpx;
  text-align: center;
}
.car .shop .description .bottom .btn .btn_add,
.car .shop .description .bottom .btn .btn_reduce {
  border: 1px solid #ccc;
}
.tools {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  border: 1px solid #ccc;
  height: 90rpx;
  line-height: 70rpx;
  padding: 10rpx 20rpx;
}
.tools checkbox .wx-checkbox-input {
  width: 35rpx;
  height: 35rpx;
}
.tools .right {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 55%;
  display: flex;
}
.tools .right .price {
  flex: 2;
  display: flex;
}
.tools .right .price view:nth-child(1) {
  flex: 1;
}
.tools .right .price view:nth-child(2) {
  flex: 2;
  display: flex;
  flex-direction: column;
}
.tools .right .price view:nth-child(2) text {
  flex: 1;
  height: 50%;
  line-height: 45rpx;
}
.tools .right .price view:nth-child(2) text:nth-child(1) {
  color: var(--themeColor);
  font-size: 38rpx;
}
.tools .right .price view:nth-child(2) text:nth-child(2) {
  text-align: right;
  padding-right: 20rpx;
}
.tools .right .count {
  flex: 1;
  background-color: var(--themeColor);
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  border-right: 5rpx;
}
