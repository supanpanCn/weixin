<!--购物车-->
<!--收获地址-->
<view class="address_box">
    <view class="address" wx:if="{{address}}">
        <view class="top">
            <text>收货人:{{address.userName}}</text>
            <text>{{address.telNumber}}</text>
        </view>
        <view class="bottom">
            {{address.provinceName}}{{address.cityName}}{{address.countyName}}{{address.detailInfo}}
        </view>
    </view>
    <view class="address_btn" wx:else>
        <button bindtap="select_address" type="primary" size="mini" plain>获取收货地址</button>
    </view>
    
</view>
<!--收获地址end-->
<!--购物车-->
<view class="car" wx:if="{{cart}}">
    <view class="title">购物车</view>
    <view class="shop">
        <checkbox-group>
            <checkbox></checkbox>
        </checkbox-group>
        <image mode="widthFix" src="{{cart[0].goods_small_logo}}"></image>
        <view class="description">
            <view class="top">1</view>
            <view class="bottom">
                <text>￥6025</text>
                <view class="btn">
                    <view class="btn_add">-</view>
                    <view>1</view>
                    <view class="btn_reduce">+</view>
                </view>
            </view>
        </view>
    </view>
</view>
<view class="car" wx:else>
    暂时没有数据~
</view>
<!--工具栏-->
<view class="tools">
    <checkbox-group>
        <checkbox></checkbox>全选
    </checkbox-group>
    <view class="right">
        <view class="price">
            <view>合计:</view>
            <view>
                <text>￥ 16752</text>
                <text>包含运费</text>
            </view>
        </view>
        <view class="count">结算(25)</view>
    </view>
</view>
<!--工具栏end-->


